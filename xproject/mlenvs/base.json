{
    "mlproj": {
        "format": "0.1",
        "params": {
            "port": "8010"
        },
        "sources": [{
            "name":    "src",
            "dir":     "src",
	    "include": [ "*.xq", "*.xqy", "*.xml", "*.sjs", "*.xsl" ]
        }, {
            "name": "full",
            "dir":  "full"
        }],
        "databases": [{
	    "id": "content",
	    "name": "@{code}-content"
	}],
        "servers": [{
	    "id": "app",
            "name": "@{code}",
            "type": "http",
            "port": "${port}",
            "content": {
                "idref": "content"
            },
	    "rewriter": "/plumbing/rewriter.xml"
        }]
    }
}
